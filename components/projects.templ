package components

templ Projects() {
	@Base("Projects") {
		<!-- ==== coming soon section start ==== -->
		<div id="project-hero-section" class="main-container">
			<div class="background-content">
				<div class="left-content project-display-area"></div>
				<div id="project-media-display" class="right-media"></div>
			</div>
			<div class="button-container-before">
				<div class="button-group">
					<a href="#" id="before-btn" class="btn btn-before btn-lg me-3 active" aria-current="page">Before</a>
					<a href="#" id="after-btn" class="btn btn-after btn-lg">After</a>
				</div>
				<div class="right-bottom-elements">
					<a href="#" id="future-state-link" class="btn btn btn-lg text-white">Videos Of Project</a>
				</div>
			</div>
		</div>
		<!--Our story-->
		<div class="container py-5">
			<div class="row mb-4">
				<div class="col-12 col-md-12">
					<h1 id="project-main-title" class="fw-bold mb-3"></h1>
					<p id="project-story-description" class="text-dark"></p>
				</div>
			</div>
			<div class="row">
				<div class="col-12 col-md-12">
					<div class="d-flex flex-column mb-3">
						<p class="fw-small mb-2">Estimated progress cost</p>
						<h3 id="project-cost" class="fw-bold mb-2"></h3>
					</div>
					<div class="d-flex flex-column mb-3">
						<h3 class="fw-bold mb-2">Campaign progress</h3>
						<h3 id="project-funded" class="fw-bold mb-2"></h3>
						<p id="project-funded-of-cost"></p>
						<div class="d-flex justify-content-end align-items-center mb-1">
							<div class="text-center">
								<h3 id="project-progress-percentage" class="fw-bold-muted mb-0"></h3>
								<p class="mb-0">of Goal</p>
							</div>
						</div>
					</div>
					<div class="progress mb-4" style="height: 10px;">
						<div id="project-progress-bar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
					<div class="text-center">
				 <button type="button" class="btn btn-custom-donate btn-lg w-100" data-bs-toggle="modal" data-bs-target="#donationModal">
                 Donate</button>
          </div>
		<div class="modal fade" id="donationModal" tabindex="-1" aria-labelledby="donationModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-header">
					   <p>Please make your donation to the following bank account details.</p>
						<h5 class="modal-title" id="donationModalLabel">Make Your Donations Through</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body text-center">
						
						<div class="card bg-light p-3 mb-3">
							<h6 class="text-muted mb-1">Bank Name</h6>
							<h4 class="fw-bold" id="bankName">Firstbank</h4>
						</div>
						    
			            <div class="card bg-light p-3 mb-3">
							<h6 class="text-muted mb-1">Account Name</h6>
							<h4 class="fw-bold" id="bankName">chineducharity</h4>
						</div>
						<div class="card bg-light p-3 mb-3">
							<h6 class="text-muted mb-1">Account Number</h6>
							<div class="d-flex justify-content-center align-items-center">
								<h4 class="fw-bold mb-0 me-2" id="accountNumber">#11139475867</h4>
								<button class="btn btn-outline-secondary btn-sm" id="copyBtn" data-clipboard-target="#accountNumber">
									<i class="fas fa-copy"></i> Copy
								</button>
							</div>
						</div>
						<!--<p class="mt-4">
							After making the transfer, please click the button below to confirm.
						</p>-->
					</div>
					<div class="modal-footer d-flex justify-content-center">
						<button type="button" class="btn btn-success btn-lg" data-bs-dismiss="modal" id="confirmTransferBtn">
							I have made a transfer
						</button>
					</div>
				</div>
			</div>
		</div>
				</div>
			</div>
		</div>
		<div class="modal fade" id="thankYouModal" tabindex="-1" aria-labelledby="thankYouModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="thankYouModalLabel">Thank You! ðŸŽ‰</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p>Thanks for Donating to **Chineducharityfoundation**!</p>
                <p>We've received your information and will be in touch shortly to confirm your donation.</p>
                <hr>
                <div class="contact-info">
                    <p class="mb-1">For More Inquiries:</p>
                    <p class="mb-1"><strong>Email:</strong> Info@cheducharityfoundation.com</p>
                    <p><strong>Call:</strong> 09034646364646</p>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
		<!--our story end-->
		<!--ongoing project starts-->
		<div class="container my-5">
			<h2 class="card-header fw-bold mb-4">Ongoing Projects</h2>
			<div id="ongoing-projects-container" class="row g-4 mb-4"></div>
		</div>
		<!--ongoing project end-->
		<!--completed projects starts-->
		<div class="container my-5">
			<h2 class="card-header fw-bold mb-4">Completed Projects</h2>
			<div id="completed-projects-container" class="row g-4 mb-4"></div>
		</div>
		<!--completed projects ends-->
		<!--Volunteer section starts-->
		<section class="py-5 bg-light">
			<div class="container">
				<div class="row align-items-center">
					<!-- Left Column -->
					<div class="col-md-6 mb-4 px-sm-5">
						<span class="badge rounded-pill bg-warning text-dark mb-3 px-3 py-2">Volunteer</span>
						<h1 class="fw-bold text-center text-lg-start">Be part of Our journey</h1>
						<p class="text-dark text-center text-lg-start">
							Whether you're passionate about making a difference, looking to support a specific cause, or simply seeking ways to give back to your community, our team welcomes your dedication. Join us as a volunteer and be part of creating real, lasting impact through our charity work.
						</p>
						<div class="col-12 d-flex justify-content-center">
							<img src="/static/images/chatbox-Dj1afIfi.jpg.png" class="img-fluid rounded mt-3 w-100" alt="Volunteer Image"/>
						</div>
					</div>
					<!-- Right Column (Form) -->
					<div class="col-md-6">
						<div class="bg-white p-4">
							<p class="text">Please fill up all fields, submit the form and we will respond as soon as possible</p>
							<form>
								<div class="row mb-3">
									<div class="col-md-6 mb-3 mb-md-0">
										<label class="form-label">Name</label>
										<input type="text" class="form-control" placeholder="Name"/>
									</div>
									<div class="col-md-6">
										<label class="form-label">Email Address</label>
										<input type="email" class="form-control" placeholder="Email Address"/>
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-md-6 mb-3 mb-md-0">
										<label class="form-label">Phone Number</label>
										<input type="text" class="form-control" placeholder="0123456789"/>
									</div>
									<div class="col-md-6">
										<label class="form-label">Volunteer Role</label>
										<input type="text" class="form-control" placeholder="Write something..."/>
									</div>
								</div>
								<div class="mb-4">
									<label class="form-label">Why Do You Choose To Help</label>
									<textarea class="form-control" rows="4" placeholder="Write something..."></textarea>
								</div>
								<button type="submit" class="btn btn-success w-100">Submit</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!--Volunteer ends-->
		<!--Newsletter starts-->
		<section class="container bg-dark-green py-5 text-white">
			<div class="container">
				<div class="row align-items-center justify-content-center">
					<div class="col-md-6 text-white text-center text-md-start mb-4 mb-md-0">
						<p class="text-uppercase fw-bold mb-1">Get Latest Updates</p>
						<h2 class="display-5 fw-bold mb-2">Sign Up Newsletter</h2>
						<p class="text-muted">We won't spam your mailbox</p>
					</div>
					<div class="col-md-6">
						<form class="d-flex flex-column flex-sm-row justify-content-center justify-content-md-end">
							<input type="email" class="form-control form-control-lg me-sm-2 mb-2 mb-sm-0" placeholder="Enter Email Address"/>
							<button type="submit" class="btn btn-warning btn-lg px-4">Subscribe Now</button>
						</form>
					</div>
				</div>
			</div>
		</section>
		<!--Newsletter end-->
		<section>
			<div class="container-fluid">
				<div class="container mt-4 mb-4">
					<div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12">
							<img src="/static/images/Frame 2147223840.png" alt="" class="img-fluid"/>
						</div>
					</div>
				</div>
			</div>
		</section>
		
		<footer class="bg-warning-subtle text-dark pt-5">
        <div class="container">
            <div class="row text-center text-md-start">
            <!-- Brand Description -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">
                <img src="/static/images/charity logo 2.png" alt="Logo" style="height: 24px;" class="me-2">
                Chinedu Onyeizu<br>Foundation
                </h5>
                <p class="text-dark">We uphold the highest standards of honesty, transparency, and accountability in all<br> our actions.</p>
            </div>

            <!-- Quick Links -->
            <div class="col-md-2 mb-4">
                <h6 class="fw-bold text-success">Quick Links</h6>
                <ul class="list-unstyled">
                <li><a href="#" class="text-dark text-decoration-none">Volunteer</a></li>
               <li><a href="#" class="text-dark text-decoration-none" data-bs-toggle="modal" data-bs-target="#donationModal">Donate</a></li>
                <li><a href="#" class="text-dark text-decoration-none">Overview</a></li>
                <li><a href="#" class="text-dark text-decoration-none">Projects</a></li>
                </ul>
            </div>

            <!-- More Links -->
            <div class="col-md-2 mb-4">
                <h6 class="fw-bold text-success">More Links</h6>
                <ul class="list-unstyled">
                <li><a href="#" class="text-dark text-decoration-none">FAQS</a></li>
                <li><a href="#" class="text-dark text-decoration-none">Privacy policies</a></li>
                <li><a href="#" class="text-dark text-decoration-none">Testimony</a></li>
                </ul>
            </div>

            <!-- Help Section -->
            <div class="col-md-4 mb-4">
                <h6 class="fw-bold text-success">Help</h6>
                <p class="mb-1">Email<br><a href="mailto:support@chineducharity.com" class="text-dark">support@chineducharity.com</a></p>
                <p class="mb-1">Socials</p>
                <div class="d-flex gap-3">
                <a href="#" class="text-dark"><i class="bi bi-facebook fs-5"></i></a>
                <a href="#" class="text-dark"><i class="bi bi-twitter fs-5"></i></a>
                <a href="#" class="text-dark"><i class="bi bi-instagram fs-5"></i></a>
                <a href="#" class="text-dark"><i class="bi bi-linkedin fs-5"></i></a>
                </div>
            </div>
            </div>

            <!-- Bottom Footer -->
            <div class="row text-center text-md-start border-top pt-3 mt-3 small">
            <div class="col-md-4">&copy; 2025 Chinedu charity. All rights reserved.</div>
            <div class="col-md-4 text-md-center">Terms of Conditions</div>
            <div class="col-md-4 text-md-end">Privacy Policy</div>
            </div>
        </div>
    </footer>
	}
}
